{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "$/*": ["../dist/*"]
    } 
  },
  "lib": ["es2015"],
  "include": [
    "src/**/*.ts"
  ],
}
